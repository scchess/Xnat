#set ($template = $data.getTemplateInfo())
$!template.setLayoutTemplate("/ScreenOnly.vm")

<style type="text/css">

    div.content-wrapper {
        min-width: 300px;
        max-width: 100%;
        margin: 0 10px;
        position: relative;
        top: 0; bottom: 10px; left: 0; right: 0;
        font-family: Helvetica, Arial, sans-serif
    }

    .mono {
        font-family: Courier, monospace;
        font-size: 13px;
    }

    .dump {
        border-collapse: collapse;
    }

    .dump .info {
        padding-top: 15px;
        padding-bottom: 15px;
    }

    .dump thead {
        border-bottom: 1px solid #a0a0a0;
    }

    .dump th {
        padding: 8px;
        font-size: 14px;
    }

    .dump td {
        padding: 3px 8px;
        vertical-align: top;
    }

    .dump td.tag,
    .dump td.desc {
        white-space: nowrap;
    }

    .dump tbody tr:hover {
        background: #e5f2ff;
    }

    .dump .center {
        text-align: center;
    }

    .dump .left {
        text-align: left;
    }

</style>

<div class="content-wrapper">

    <table align="center" class="dump">
        <thead>
        <tr>
            <th colspan="3" class="left info">
                The DICOM tags for the first dicom file in this scan.
            </th>
        </tr>
        <tr>
            <th>Tag</th>
            <th class="left">Description</th>
            <th class="left">Value</th>
        </tr>
        </thead>
        <tbody class="mono">
            #foreach($row in $table.toArrayListOfLists())
            <tr>
                <td class="tag">$!row.get(0)</td>
                <td class="desc">$!row.get(4)</td>
                <td class="value">$!row.get(3)</td>
            </tr>
            #end</tbody>
    </table>

</div>
