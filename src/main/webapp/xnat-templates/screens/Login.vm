## define this once
#define($userLoginFields)
    <p>
        <label for="username">User</label>
        <input type="text"
               id="username"
               name="username"
               title="User"
               class="validate onblur"
               data-validate="not-empty"
               data-message="Username field cannot be blank.">
    </p>
    <p>
        <label for="password">Password</label>
        <input type="password"
               name="password"
               autocomplete="off"
               title="Password"
               class="validate onblur"
               data-validate="not-empty"
               data-message="Password field cannot be blank.">
    </p>
    <p class="form-submit">
        <label class="pull-left" style="padding-top:6px;">
            <input type="checkbox" id="continue-from-last-page" class="skip">
            <i>Continue from last visited page?</i>
        </label>
        <button class="submit btn pull-right" id="loginButton" type="submit" name="login">Login</button>
        <span class="clearfix"></span>
    </p>
    <span class="clearfix"></span>
#end


<div id="login_area">

#if($siteConfig.siteWideAlertStatus != "0" && $siteConfig.siteWideAlertStatus != "off")
    <div class="$siteConfig.siteWideAlertType" style="margin-bottom: 2em;" data-status="$siteConfig.siteWideAlertStatus">$siteConfig.siteWideAlertMessage</div>
#end


#if($turbineUtils.GetPassedParameter("par",$data))
    ## create custom layout when parameters are passed to the login page from an external link.
    <div id="login_welcome">
        #if($siteConfig.siteDescriptionType == "Text")
            <div id="siteDescription"></div>
            <textarea id="siteDescriptionMd" style="display: none;">$siteConfig.siteDescriptionText</textarea>
        #else
            #if($turbineUtils.resourceExists($siteConfig.siteDescriptionPage))
                #parse($siteConfig.siteDescriptionPage)
            #else
                <p>Custom site description page not found!</p>
            #end
        #end
    </div>

    #if($data.getMessage())
    <div class="warning">
        <strong>Note: </strong> $data.getMessage()
    </div>
    #end

    <div id="register_box_container">
        <h3><span>New User Registration</span> <button class="btn btn-sm" onclick="showLogin()">Already Have an Account?</button></h3>
        <div class="clear"></div>
        <div id="register_box">
            #parse("/screens/register_box.vm")
        </div>
    </div>

    <div id="login_box_container" class="hidden">
        <h3><span>Existing User Login</span> <button class="btn btn-sm" onclick="showRegistration()">Register?</button> </h3>
        <div class="clear"></div>
        <div class="message">
            <strong>Note: </strong> It looks like you received an invitation to join this site via email. Logging in here will accept that invitation and tie it with your existing $siteConfig.siteId account.
            <br><br>
            Not what you want? <a href="$content.getURI('/app/template/Login.vm')"><strong>Default Log In Page</strong></a>
        </div>
        <div class="clear" style="margin:2em 0;"></div>
        <div id="login_box">
            <form name="form1" method="post" action="$content.getURI("/login")" class="noHide friendlyForm validate" id="login_form">
                #if($login_methods && $login_methods.size() == 0)
                    <input type="hidden" id="login_method" name="login_method" value="Database">
                #elseif($login_methods && $login_methods.size() > 1)
                    <label for="login_method">Login</label>
                    <select id="login_method" class="xnat-menu" data-menu-opts="width:160px" name="login_method">
                        #foreach ($method in $login_methods)
                            <option value="$method">$method</option>
                        #end
                    </select>
                #end


                ${userLoginFields}


                #foreach($key in $!turbineUtils.GetDataParameterHash($data).keySet())
                    #if ($key!="action" && $key!="template" &&$key!="password" &&!$key.startsWith("xdat:user") &&$key!="username" &&$key!="exception" &&$key!="username" &&$key!="exception")
                        <input type="hidden" name="$key" value="$!turbineUtils.escapeHTML($!turbineUtils.GetPassedParameter($key,$data))">
                    #end
                #end

            </form>
        </div>

        <span class="clearfix"></span>
        <br>

        <p id="register_forgot" class="pull-right text-right" style="width:400px;margin-right:20px;">
            <a class="link btn-hover" href="$link.setPage("ForgotLogin.vm")#if($turbineUtils.GetPassedParameter('par',$data))/par/$turbineUtils.GetPassedParameter('par',$data)#end"><u>Forgot login or password?</u></a>
        </p>

        <span class="clearfix"></span>

    </div>

    <span class="clearfix"></span>

    <script>
        function showLogin() {
            jq('#register_box_container').addClass('hidden');
            jq('#login_box_container').removeClass('hidden');
        }
        function showRegistration() {
            jq('#register_box_container').removeClass('hidden');
            jq('#login_box_container').addClass('hidden');
        }
    </script>

#else
## standard layout for login page

    <div id="login_welcome">
        #if($siteConfig.siteDescriptionType == "Text")
            <div id="siteDescription"></div>
            <textarea id="siteDescriptionMd" style="display: none;">$siteConfig.siteDescriptionText</textarea>
        #else
            #if($turbineUtils.resourceExists($siteConfig.siteDescriptionPage))
                #parse($siteConfig.siteDescriptionPage)
            #else
                <p>Custom site description page not found!</p>
            #end
        #end
    </div>

    <div id="login_box">

        #if($data.getMessage())
        <div class="message" style="border-bottom: 0">
            <strong>Note: </strong> $data.getMessage()
        </div>

        #end

        <form name="form1" method="post" action="$content.getURI("/login")" class="noHide friendlyForm validate" id="login_form">
            #if($login_methods && $login_methods.size() == 0)
                <input type="hidden" id="login_method" name="login_method" value="Database">
            #elseif($login_methods && $login_methods.size() > 1)
                <label for="login_method">Login</label>
                <select id="login_method" class="xnat-menu" data-menu-opts="width:160px" name="login_method">
                    #foreach ($method in $login_methods)
                        <option value="$method">$method</option>
                    #end
                </select>
            #end


            ${userLoginFields}


            <input type="hidden" name="XNAT_CSRF" value="">
        </form>
    </div>

    <span class="clearfix"></span>
    <br>

    <p id="register_forgot" class="pull-right text-right" style="width:400px;margin-right:20px;">
        <a class="link btn-hover" href="$link.setPage("Register.vm")#if($turbineUtils.GetPassedParameter('par',$data))/par/$turbineUtils.GetPassedParameter('par',$data)#end"><u>Register</u></a>
        &nbsp;
        <a class="link btn-hover" href="$link.setPage("ForgotLogin.vm")#if($turbineUtils.GetPassedParameter('par',$data))/par/$turbineUtils.GetPassedParameter('par',$data)#end"><u>Forgot login or password?</u></a>
        <span class="clearfix"></span>
    </p>

#end

</div><!-- /#login_area -->

<script>
    (function(){
        var continueChkbx = $('#continue-from-last-page');
        if (/#continue/i.test(window.location.hash) || /continue=true/i.test(window.location.search)) {
            continueChkbx[0].checked = true;
            XNAT.cookie.set('continue_session', true);
        }
        else {
            continueChkbx[0].checked = false;
            // XNAT.cookie.set('continue_session', false);
            XNAT.cookie.remove('continue_session');
        }
        // continueChkbx.on('change', function(){
        //     XNAT.cookie.set('continue_session', $(this)[0].checked);
        // });
    })()
</script>

<script>
    $(function(){

        var mdtext = $('#siteDescriptionMd').text();
        var markedText = marked(mdtext);
        $('#siteDescription').html(markedText);

        $('#login_form').on('submit', function(e){

            var errorCount = 0;

            XNAT.cookie.set('continue_session', $$('!#:continue-from-last-page').checked);

            XNAT.xhr.submit(this, {
                invalid: function(form, ers){
                    errorCount = ers.length;
                    return false;
                },
                // callback for successful validation
                valid: function(){
                    // validation passed, hide the
                    // form and open the loader
                    concealContent();
                    // xmodal.loading.open();
                    // return false here to stop
                    // execution of XNAT.xhr.submit())
                    return false;
                }
            });

            return errorCount === 0;

        });

    });

    console.log('$!turbineUtils.escapeJS($siteConfig.passwordComplexityMessage)');
</script>


